<UserControl x:Class="ProjectManager.ProjectFileRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <Grid Margin="0 0 0 3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.64*"/>
            <ColumnDefinition Width="0.18*"/>
            <ColumnDefinition Width="0.18*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Margin="10 0 0 0" Name="tbl_Filename" Text="Filename" />
        <Button Click="b_Launch_Click" Content="Launch" Grid.Column="1" Name="b_Launch" Width="70" />
        <Button Click="b_View_Click" Content="View" Grid.Column="2" Name="b_View" Width="70" />
    </Grid>
</UserControl>
